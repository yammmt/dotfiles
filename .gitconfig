[user]
	name = yammmt
	email = cu.cs.y20@gmail.com
	signingkey = B4EE4EA3
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[core]
	precomposeunicode = true
	editor = vim
	autocrlf = false
	quotepath = false
	commentChar = ";"
	pager = delta
[push]
	default = current
[merge]
	ff = only
[pull]
	ff = only
	rebase = merges
[alias]
	br = branch
	st = status
	co = checkout
	gr = log --graph --decorate
	b = branch
	cm = commit
	last = log --graph --decorate -p -1
	pp = pull --prune
	d = diff
	a = add
	ol = log --oneline
	m = merge
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[gpg]
	program = gpg
[commit]
	gpgsign = true
[credential]
	helper = osxkeychain
[init]
	defaultBranch = main
[delta]
    line-numbers = true
	syntax-theme = Monokai Extended
[diff]
    tool = difftastic
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[pager]
    difftool = true
[help]
	format = web
[rerere]
	enabled = true
